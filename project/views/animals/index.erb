<h1>Mounts</h1>

<a href="/animals/new">Order a new Steed!</a>
</br></br>
<div style = "margin-left: 20px">
  <table style="width:50%">
    <tr>
      <th align="left">Mount</th>
      <th align="center">Honour Level</th>
      <th align="center">Admitted</th>
      <th align="center">Available</th>
      <th align="center">Update</th>
      <th align="center">Delete</th>
    </tr>
    <% for animal in Animal.adoptees %>
    <tr>
      <td><%= animal.name %> the <%= animal.species %></td>
      <td align="center"><%= animal.honour_level %></td>
      <td align="center"><% times =Date.parse(animal.admission_date)
      time=times.strftime("%d, %B, %Y") %>
      <%= time %></td>
      <td align="center"><%= "Yes" if animal.ready_to_adopt == "t" %> <%= "No" if animal.ready_to_adopt == "f" %></td>
      <td align="center"><form action="/animals/<%= animal.id %>/update" method="GET">
          <input type="submit" value="update"/></td>
      <td align="center"><form action="/animals/<%= animal.id %>/delete" method="POST">
          <input type="submit" value="delete"/></td>
    </tr>
    <% end %>
    <img src="../images/griffin.jpg" style="height:500px;" style="inline" align="right" padding = "20px" margin-right = "20px">
  </table>
</div>
